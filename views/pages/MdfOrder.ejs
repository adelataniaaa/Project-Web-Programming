        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script>
            
            $(".langkah").click( function() {
            $(this).addClass("active").prevAll().addClass("active");
            $(this).nextAll().removeClass("active");
        });

        $(".langkah1").click( function() {
            $("#garis-progres").css("width", "3%");
            $(".step1").addClass("active").siblings().removeClass("active");
        });

        $(".langkah2").click( function() {
            $("#garis-progres").css("width", "25%");
            $(".step2").addClass("active").siblings().removeClass("active");
        });

        $(".langkah3").click( function() {
            $("#garis-progres").css("width", "50%");
            $(".step3").addClass("active").siblings().removeClass("active");
        });

        $(".langkah4").click( function() {
            $("#garis-progres").css("width", "75%");
            $(".step4").addClass("active").siblings().removeClass("active");
        });

        $(".langkah5").click( function() {
            $("#garis-progres").css("width", "100%");
            $(".step5").addClass("active").siblings().removeClass("active");
        });
        </script>
</body>
</html>